<div id="post">
	<header>
		<h1>
			<%= @category.name %> |
			<%= @post.purpose %>
		</h1>

		<ul class="actions">
			<li class="d-inline">
				<%= link_to "Edit Post", [:edit, @category, @post],
                class: "edit" %>
			</li>
			<li class="d-inline">
				<%= link_to "Delete Post", [@category, @post], method: :delete,
                    data: { confirm: "Are you sure you want to delete this post?"},
                    class: "delete" %>
			</li>
		</ul>
	</header>

	<h2>
		<%= @post.title %>
	</h2>

	<dl class="row">
		<dt class="col-sm-3"></dt>
		<dd class="col-sm-9"></dd>

		<dt class="col-sm-3">Description</dt>
		<dd class="col-sm-9">
			<%= @post.description %>
		</dd>

		<dt class="col-sm-3">Location</dt>
		<dd class="col-sm-9">
			<%= @post.location %>
		</dd>

		<dt class="col-sm-3">Price</dt>
		<dd class="col-sm-9">
			<%= number_with_delimiter(@post.price, precision: 0) %>
			<%= @post.currency %>
		</dd>

		<dt class="col-sm-3">Phone</dt>
		<dd class="col-sm-9">
			<%= @post.phone %>
		</dd>

		<dt class="col-sm-3">Created</dt>
		<dd class="col-sm-9">
			<%= time_ago_in_words(@post.created_at) %> ago</dd>
	</dl>

</div>
