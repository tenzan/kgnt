<div id="post">
	<header>
		<h1>
			<%= @category.name %>
		</h1>

		<ul class="actions">
			<li class="d-inline">
				<%= link_to "Edit Post", [:edit, @category, @post],
                class: "edit" %>
			</li>
			<li class="d-inline">
				<%= link_to "Delete Post", [@category, @post], method: :delete,
                    data: { confirm: "Are you sure you want to delete this post?"},
                    class: "delete" %>
			</li>
		</ul>
	</header>

</div>
